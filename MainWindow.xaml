<Window x:Class="Facturacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Facturacion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Menu Height="23" Width="86" VerticalAlignment="Top">
                    <MenuItem Header=" Registros" Height="24" Width="165">
                        <MenuItem Header="REGISTRAR PRODUCTOS" Click="BtnRegistrarProducto" />
                        <MenuItem Header="REGISTRAR CLIENTES" Click="BtnRegistrarCliente"/>
                        <MenuItem Header="FACTURACION" Click="BtnFacturacion"/>
                    </MenuItem>
                </Menu>
                <Menu Height="23" Width="86" VerticalAlignment="Top">
                    <MenuItem Header="Consultas" Height="23">
                        <MenuItem Header="Inventario" Click="BtnIntentario"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
